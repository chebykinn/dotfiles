{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "args": ["--log-file=/tmp/ccls.log", "-v=1"],
      "filetypes": ["c", "cpp", "cpp.doxygen", "objc", "objcpp"],
      "rootPatterns": [".ccls", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls"
         },
         "compilationDatabaseDirectory": "build"
       }
    }
  },
  "coc.preferences.colorSupport": false
}
